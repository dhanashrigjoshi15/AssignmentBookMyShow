<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <RelativeLayout
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

                <ImageView
                    android:id="@+id/iv_movie_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_margin="@dimen/dimen_5dp"/>

                <Button
                    android:id="@+id/btn_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_book"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_22sp"
                    android:background="@drawable/rounded_corner"
                    android:layout_below="@+id/iv_movie_image"
                    android:layout_margin="@dimen/dimen_5dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/text_18sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-medium"
                    android:layout_margin="@dimen/dimen_5dp"/>

                <TextView
                    android:id="@+id/tv_release_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Release Date: 19th Oct 2019"
                    android:textSize="@dimen/text_18sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_below="@+id/tv_name" />

                <TextView
                    android:id="@+id/tv_popularity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="96% Popularity"
                    android:textSize="@dimen/text_18sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_below="@id/tv_release_date"/>

                <TextView
                    android:id="@+id/tv_original_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Language: English"
                    android:textSize="@dimen/text_18sp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_below="@id/tv_popularity"/>
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>